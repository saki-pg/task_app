 <h3>スケジュール新規作成</h3>
  <%= render "shared/error", obj: @post %>  
   
  <%= form_with(model: @post, local: true) do |f| %>
   <table>
     <tr>
       <th><%= f.label :title ,"タイトル" %></th>
       <td><%= f.text_field :title %></td>
     </tr>
 
     <tr>
       <th><%= f.label :start ,"開始日" %></th>
       <td><%= f.date_field :start %></td>
     </tr>
 
     <tr>
       <th><%= f.label :end ,"終了日" %></th>
       <td><%= f.date_field :end %></td>
     </tr>
     
     <tr>
       <th><%= f.label :all_day ,"終日" %></th>
       <td><%= f.check_box :all_day %>終日の場合はチェックを入れます</td>
     </tr>
 
     <tr>
       <th><%= f.label :introduction ,"スケジュールメモ" %></th>
       <td><%= f.text_area :introduction %></td>
     </tr>
   </table>
 
   <div>
     <ul>
       <li><%= f.submit "スケジュールを新規登録する" %></li>
       <li><%= link_to "スケジュール一覧に戻る", :posts %></li>
     </ul>
   </div>
 <% end %>
 
<footer>
  <h2>現在の日時 : <%= Date.current.strftime("%Y年 %m月 %d日") %>
  </h2> 
</footer>
